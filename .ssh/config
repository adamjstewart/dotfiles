# For a list of keywords, type `man ssh_config`
# https://www.digitalocean.com/community/tutorials/how-to-configure-custom-connection-options-for-your-ssh-client

# Git
Host github
    HostName github.com

Host gitlab
    HostName gitlab.cels.anl.gov

Host git*
    User git
    # Specify different RSA identity file
    IdentityFile ~/.ssh/git_rsa

# Blues
Host blues
    HostName blogin4.lcrc.anl.gov

# hostname %h expansion was introduced in OpenSSH 5.6
# Blues is running OpenSSH 5.3 :(
#Host blogin1 blogin2 blogin3 blogin4
#    HostName %h.lcrc.anl.gov

Host blogin1
    HostName blogin1.lcrc.anl.gov

Host blogin2
    HostName blogin2.lcrc.anl.gov

Host blogin3
    HostName blogin3.lcrc.anl.gov

Host blogin4
    HostName blogin4.lcrc.anl.gov

Host bmgt1 bmgt2 bmgt3

# Fusion
Host fusion
    HostName flogin4.lcrc.anl.gov

# hostname %h expansion was introduced in OpenSSH 5.6
# Fusion is running OpenSSH 4.3 :(
#Host flogin1 flogin2 flogin3 flogin4
#    HostName %h.lcrc.anl.gov

Host flogin1
    HostName flogin1.lcrc.anl.gov

Host flogin2
    HostName flogin2.lcrc.anl.gov

Host flogin3
    HostName flogin3.lcrc.anl.gov

Host flogin4
    HostName flogin4.lcrc.anl.gov

Host fmgt1 fmgt2 fmgt3

# Argonne
Host mcs
    HostName login.mcs.anl.gov

Host compute001
    HostName compute001.mcs.anl.gov

Host red
    HostName red.mcs.anl.gov

# Default
Host *
    User ajstewart
    # Suppress banner but not error messages
    LogLevel ERROR
    # Forward connection to authentication agent to remote machine
    ForwardAgent yes
    # Enable X11 forwarding. Same as -X
    #ForwardX11 yes
    # Enable trusted X11 forwarding. Same as -Y
    #ForwardX11Trusted yes
